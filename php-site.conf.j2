server {
    listen 80;
    server_name your_domain.com;

    root /var/www/html/;
    index index.php;

    location / {
        try_files $uri $uri/ =404;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;  # Use a wildcard to match any PHP version socket
    }

    location ~ /\.ht {
        deny all;
    }
}
